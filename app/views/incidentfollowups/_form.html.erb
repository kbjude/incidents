
<%= simple_form_for(@incidentfollowup) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
  <%= f.hidden_field :incident_id%>
  <div class="form-inputs">
    <div class = "row">
      <div class = "col-4">
        <%= f.select :status, ['Pending', 'In Progress', 'Canceled', 'Resolved'], {prompt: "Status"}, {class: "form-control"}%>
      </div>
      <div class = "col-8">
        <%= f.input :date, label: false %>
      </div>
    </div>
    <div class = "row">
      <div class = "col-12">
        <%= f.input :comment, placeholder: "Comment", label: false %>
      </div>
    </div>
  </div>

  <div class="form-actions">
    <button class="btn btn-primary">Save</button>
  </div>
<% end %>
