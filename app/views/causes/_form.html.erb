
<%= simple_form_for(@cause) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="row">
    <div class="col-5">
      <%= f.input :name, placeholder: "Name", label: false %>
    </div>
    <div class="col-5">
      <%= f.select :category, ['Unsafe Act','Unsafe Condition','Personal Factor','System Factor'], {prompt: "Category"}, {class: "form-control"} %>
    </div>

    <div class="col-2">
      <button class="btn btn-primary">Save</button>
    </div>
  </div>
<% end %>
