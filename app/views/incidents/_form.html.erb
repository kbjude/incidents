
<%= simple_form_for(@incident) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <div class="row">
      <div class="col-3">
        <label>Incident Type</label>
        <%= f.collection_select :incidentcategory_id, Incidentcategory.all.order("name"), :id, :name, {prompt: "Incident Type"}, {class: "form-control"} %>
      </div>
      <div class="col-4">
        <%= f.input :date_time %>
      </div>
      <div class="col-3">
        <%= f.input :address, label: "Location" %>
      </div>
      <div class="col-2">
        <label>Status</label>
        <%= f.select :status, ['Open','In Review','Closed'], {prompt: "Status"}, {class: "form-control"} %>
      </div>
    </div>
    <div class="row">
      <div class="col-12">
        <%= f.input :description, label: "What happened exactly?" %>
      </div>
    </div>
    <div class="row">
      <div class="col-12">
        <%= f.input :injured_parts, label: "What parts of your body were injured?" %>
      </div>
    </div>
    <div class="row">
      <div class="col-12">
        <%= f.input :activity, label: "What were you doing when it happened?" %>
      </div>
    </div>
    <div class="row">
      <div class="col-12">
        <%= f.input :cause, label: "What caused the incident?" %>
      </div>
    </div>
    <div class="row">
      <div class="col-12">
        <%= f.input :prevention, label: "What could have been done to prevent the incident?" %>
      </div>
    </div>
  </div>
  <div class="form-actions">
    <button class="btn btn-primary">Save</button>
  </div>
<% end %>