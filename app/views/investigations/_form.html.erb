
<div class="card" style="margin: 0px;">
  <div class="card-body">
    <%= simple_form_for(@investigation) do |f| %>
      <%= f.error_notification %>
      <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

      <%= f.hidden_field :incident_id %>
      <%= f.hidden_field :user_id %>
      <div class="row">
        <div class="col-3">
          <%= f.input :report_number %>
        </div>
        <div class="col-6">
          <%= f.input :date %>
        </div>
        <div class="col-3">
          <label>Department</label>
          <%= f.collection_select :department_id, Department.all.order("name"), :id, :name, {prompt: "Please choose"}, {class: "form-control"} %>
        </div>
      </div>
      <div class="row">
        <div class="col-3">
          <label>Status</label>
          <%= f.select :status, ['Pending','In Progress','Completed','Canceled'], {prompt: "Please choose"}, {class: "form-control"} %>
        </div>
        <div class="col-3">
          <div style="height:30px">&nbsp;</div>
          <%= f.input :reportable_to_legal %>
        </div>
      </div>
      <br/>
      <div class="form-actions">
        <button class="btn btn-primary">Save</button>
      </div>
    <% end %>
  </div>
</div>
