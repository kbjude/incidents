<div class="login">
    <%= simple_form_for @user do |f| %>
      <div class="errors">
        <%= f.error_notification %>
        <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
      </div>
      <div class ="card" style="margin: 0px;">
        <div class = "card-body">
          <div class = "row">
            <div class="col-4">
              <%= f.input :email, class: "form-control", placeholder: 'Email', label: false %>
            </div>
            <div class = "col-4">
              <%= f.input :name, class: "form-control", placeholder: 'User Name', label: false  %>
            </div>
            <div class = "col-4">
              <%= f.select :role, ['Admin', 'User'], {prompt: "Select Role"}, {class: "form-control"} %>
            </div>
          </div>
          <div class="row">
            <div class="col-4">
              <%= f.input :password, class: "form-control", placeholder: 'Password', label: false %>
            </div>
            <div class="col-4">
              <%= f.input :password_confirmation, class: "form-control", placeholder: 'Confirm password', label: false %>
            </div>
            <div class="col-2">
              <button class="btn btn-primary">Save</button>
            </div>
          </div>
        </div>
      </div>
  <% end %>
</div>
