<div class="login">
  <div class="errors">
    <%= simple_form_for @user do |f| %>
        <%= f.error_notification %>
        <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
  </div>
  <br> <br><br>
      <div class ="card">
        <div class = "card-body">
          <div class = "row">
            <div class = "col-8">
              <%= f.input :name, class: "form-control", placeholder: 'User Name', label: false  %>
            </div>
            <div class = "col-4">
              <%= f.select :role, ['Admin', 'User'], {prompt: "Select Role"}, {class: "form-control"} %>
            </div>
          </div>
              <%= f.input :email, class: "form-control", placeholder: 'Email', label: false %>
              <%= f.input :password, class: "form-control", placeholder: 'Password', label: false %>
              <%= f.input :password_confirmation, class: "form-control", placeholder: 'Confirm password', label: false %>
              
            </div>

            <div class="form-actions">
            <button class="btn btn-primary">Save</button>
            </div>
          </div>
        </div>
      </div>
  <% end %>
</div>
